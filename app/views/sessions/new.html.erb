<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10 offset1">

      <div id="container">
        

        <h1>Sign in</h1>

        <%= form_for(:session, :url => sessions_path) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email %>
          </div>
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password %>
          </div>
          <div>
            <%= f.submit "Sign in" %>
          </div>
        <% end %>

        <p>New user? <%= link_to "Sign up now!", "#" %></p>

      </div>

    </div>
  </div>
</div>
